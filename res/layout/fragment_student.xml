<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/bounder_padding"
    android:weightSum="5" >

    <ImageView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_marginBottom="@dimen/s10"
        android:layout_weight="1" android:scaleType="fitXY" 
        android:contentDescription="@string/description" />

    <FrameLayout
        android:id="@+id/student_content"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="3"
        android:background="@color/main_background" />

    <RelativeLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="@dimen/s10"
        android:layout_weight="1" >

        <View
            android:id="@+id/strut"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_left"
            style="@style/Button.ButtonStyle.StudentInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/strut"
            android:layout_marginRight="@dimen/s5" />

        <Button
            android:id="@+id/btn_right"
            style="@style/Button.ButtonStyle.StudentInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/strut"
            android:layout_marginLeft="@dimen/s5" />
    </RelativeLayout>

</LinearLayout>