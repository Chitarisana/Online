<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:clickable="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/s10"
        android:contentDescription="@string/description"
        android:src="@drawable/ic_arrow_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/arrow_right"
        android:orientation="vertical"
        android:padding="@dimen/s10" >

        <TextView
            android:id="@+id/title"
            style="@style/TextView.TextStyle.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/news_list_title" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s5"
            android:layout_marginTop="@dimen/s5"
            android:textColor="@color/news_list_date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shortdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/news_list_short" />
    </LinearLayout>

</RelativeLayout>