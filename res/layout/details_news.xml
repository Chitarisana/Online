<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/bounder_padding" >

    <TextView
        android:id="@+id/title"
        style="@style/TextView.TextStyle.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/info"
        android:paddingBottom="@dimen/s10"
        android:paddingLeft="@dimen/s15"
        android:paddingRight="@dimen/s15"
        android:paddingTop="@dimen/s10" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="@dimen/s15" />
    </ScrollView>

</LinearLayout>