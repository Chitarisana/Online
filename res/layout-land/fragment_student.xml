<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/bounder_padding"
    android:weightSum="5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="4" >

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/bounder_padding"
            android:layout_weight="1"
            android:contentDescription="@string/description"
            android:scaleType="fitXY" />

        <FrameLayout
            android:id="@+id/student_content"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="@dimen/s10"
        android:layout_weight="1" >

        <View
            android:id="@+id/strut"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_left"
            style="@style/Button.ButtonStyle.StudentInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/strut"
            android:layout_marginRight="@dimen/s5" />

        <Button
            android:id="@+id/btn_right"
            style="@style/Button.ButtonStyle.StudentInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/strut"
            android:layout_marginLeft="@dimen/s5" />
    </RelativeLayout>

</LinearLayout>