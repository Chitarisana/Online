    <style name="TextView.TextStyle" parent="android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="TextView.TextStyle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TextStyle.Bold.StudentName">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.TextStyle.Bold.StudentID">
        <item name="android:textColor">@color/student_id</item>
    </style>

    <style name="TextView.TextStyle.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="TextView.TextStyle.Title.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextView.TextStyle.Title.Padding">
        <item name="android:paddingBottom">@dimen/s5</item>
        <item name="android:paddingTop">@dimen/s5</item>
        <item name="android:paddingLeft">@dimen/s10</item>
        <item name="android:paddingRight">@dimen/s10</item>
    </style>

    <style name="TextView.TextStyle.Title.Padding.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextView.TextStyle.Padding">
        <item name="android:paddingBottom">@dimen/s5</item>
        <item name="android:paddingTop">@dimen/s5</item>
        <item name="android:paddingLeft">@dimen/s10</item>
        <item name="android:paddingRight">@dimen/s10</item>
    </style>

    <style name="TextView.TextStyle.Title.AppName">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.TextStyle.SliderMenu">
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">2sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">2sp</item>
        <item name="android:paddingRight">2sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/info</item>
    </style>

    <style name="TextView.TextStyle.Small">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="EditText.TextStyle" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:fontFamily">serif</item> -->
    </style>

    <style name="EditText.TextStyle.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/s5</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/info</item>
    </style>

    <style name="EditText.TextStyle.Login.Username">
        <item name="android:hint">@string/login_username</item>
        <item name="android:imeActionLabel">@string/next</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textVisiblePassword</item>
    </style>

    <style name="EditText.TextStyle.Login.Password">
        <item name="android:imeActionLabel">@string/next</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditText.TextStyle.Login.Password.Done">
        <item name="android:imeActionLabel">@string/btn_confirm</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="Button.ButtonStyle" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Button.ButtonStyle.StudentInfo">
        <item name="android:padding">@dimen/s5</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/info</item>
        <!-- temp bg color while loading -->
    </style>

    <style name="Button.ButtonStyle.RegisterMain">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/bounder_padding</item>
        <!-- 2x bounder ==> khoang cach deu nhau -->
        <item name="android:textColor">@color/title</item>
        <item name="android:padding">@dimen/s10</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBar.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="ActionBar.Solid.Onlinehcmup" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_onlinehcmup</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_onlinehcmup</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_onlinehcmup</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Onlinehcmup</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="ActionBar.Transparent.Onlinehcmup" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_onlinehcmup</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Onlinehcmup</item>
    </style>

    <style name="PopupMenu.Onlinehcmup" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_onlinehcmup</item>
    </style>

    <style name="DropDownListView.Onlinehcmup" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_onlinehcmup</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>

    <style name="ActionBarTabStyle.Onlinehcmup" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_onlinehcmup</item>
    </style>

    <style name="DropDownNav.Onlinehcmup" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_onlinehcmup</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_onlinehcmup</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_onlinehcmup</item>
    </style>

    <style name="ProgressBar.Onlinehcmup" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_onlinehcmup</item>
    </style>

    <style name="ActionButton.CloseMode.Onlinehcmup" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_onlinehcmup</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Onlinehcmup.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Onlinehcmup</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Onlinehcmup</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Dialog">

        <!-- <item name="android:textColor">#00FF00</item> -->
        <item name="android:typeface">serif</item>
        <!-- background title, content, button -->
    </style>

    <style name="ProgressDialogCustom" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScoreDetailDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>