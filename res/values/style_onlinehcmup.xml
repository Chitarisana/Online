<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Onlinehcmup" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_onlinehcmup</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Onlinehcmup</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Onlinehcmup</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Onlinehcmup</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Onlinehcmup</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Onlinehcmup</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_onlinehcmup</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_onlinehcmup</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Onlinehcmup</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBar.MenuTextStyle</item>
        <item name="android:textViewStyle">@style/TextView.TextStyle</item>
        <item name="android:editTextStyle">@style/EditText.TextStyle</item>
        <item name="android:buttonStyle">@style/Button.ButtonStyle</item>
        <item name="android:typeface">serif</item>
        <!-- <item name="android:listViewStyle">@style/ListViewStyle</item> -->


        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Onlinehcmup.Widget</item>
    </style>

