    <style name="ListViewStyle" parent="android:style/Widget.ListView">
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="ListViewStyle.Selector">
        <item name="android:listSelector">@drawable/selectable_background_onlinehcmup</item>
    </style>
